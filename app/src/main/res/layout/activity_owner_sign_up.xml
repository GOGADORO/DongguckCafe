<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerSignUp">
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <View
        android:id="@+id/AppLogoView"
        android:layout_width="match_parent"
        android:layout_height="80dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/border_layout">

        <TextView
            android:id="@+id/OwnerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화번호(id)"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:id="@+id/OwnerIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_border_layout"
            android:ems="10"
            android:hint="핸드폰 번호를 입력해주세요"
            android:padding="10dp"
            android:inputType="phone" />

        <TextView
            android:id="@+id/OwnerPW1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 1"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:id="@+id/PW1Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_border_layout"
            android:ems="10"
            android:hint="비밀번호1를 입력해주세요"
            android:padding="10dp"
            android:inputType="phone" />

        <EditText
            android:id="@+id/PW1CheckText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_border_layout"
            android:ems="10"
            android:hint="비밀번호1 확인"
            android:padding="10dp"
            android:inputType="phone" />

        <TextView
            android:id="@+id/OwnerPW2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 1"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:id="@+id/PW2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_border_layout"
            android:ems="10"
            android:hint="비밀번호2를 입력해주세요"
            android:padding="10dp"
            android:inputType="phone" />

        <EditText
            android:id="@+id/PW2CheckText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/textview_border_layout"
            android:ems="10"
            android:hint="비밀번호2 확인"
            android:padding="10dp"
            android:inputType="phone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/SignLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/SignUpButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="회원가입" />
    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>