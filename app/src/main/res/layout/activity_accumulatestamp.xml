<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccumulateStamp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:adjustViewBounds="true"
        android:baseline="100dp"
        android:src="@drawable/coop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableLayout" />

    <TableLayout

        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <EditText
                android:id="@+id/customerName"
                android:layout_span="4"
                android:gravity="right"
                android:hint="고객님" />
        </TableRow>

        <TableRow>

            <TextView android:padding="20dip" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="스탬프"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/stampCount"
                android:gravity="right"
                android:padding="8dip"
                android:text="0" />
        </TableRow>

        <TableRow>

            <TextView android:padding="20dip" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="아메리카노 쿠폰"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/AmericanoCount"
                android:gravity="right"
                android:padding="8dip"
                android:text="0" />
        </TableRow>

        <TableRow>

            <TextView android:padding="20dip" />

            <TextView
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="카페라떼 쿠폰"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/latteCount"
                android:gravity="right"
                android:padding="8dip"
                android:text="0" />
        </TableRow>

        <TableRow android:gravity="center">

            <EditText
                android:id="@+id/couponCount"
                android:layout_span="4"
                android:gravity="right"
                android:hint="0 개" />
        </TableRow>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="245dp"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/Num1"
                        android:height="50dip"
                        android:onClick="NumberingCoupon"
                        android:text="1" />

                    <Button
                        android:id="@+id/Num2"
                        android:onClick="NumberingCoupon"
                        android:text="2" />

                    <Button
                        android:id="@+id/Num3"
                        android:onClick="NumberingCoupon"
                        android:text="3" />
                </TableRow>

                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/Num4"
                        android:onClick="NumberingCoupon"
                        android:text="4" />

                    <Button
                        android:id="@+id/Num5"
                        android:layout_height="38dp"
                        android:onClick="NumberingCoupon"
                        android:text="5" />

                    <Button
                        android:id="@+id/Num6"
                        android:onClick="NumberingCoupon"
                        android:text="6" />
                </TableRow>

                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/Num7"
                        android:onClick="NumberingCoupon"
                        android:text="7" />

                    <Button
                        android:id="@+id/Num8"
                        android:onClick="NumberingCoupon"
                        android:text="8" />

                    <Button
                        android:id="@+id/Num9"
                        android:onClick="NumberingCoupon"
                        android:text="9" />
                </TableRow>

                <TableRow android:gravity="center">

                    <Button
                        android:id="@+id/plus"
                        android:text="+" />

                    <Button
                        android:id="@+id/Num0"
                        android:onClick="NumberingCoupon"
                        android:text="0" />
                    //android:layout_span="2"

                    <Button
                        android:id="@+id/minus"
                        android:text="-" />

                    <Button
                        android:id="@+id/reset"
                        android:text="초기화" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/accumulate"
                android:layout_width="50dp"
                android:layout_height="150dip"
                android:text="적립" />
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/useCopoun"
                android:text="쿠폰 사용" />

            <Button
                android:id="@+id/managementMenu"
                android:text="메뉴 관리" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>